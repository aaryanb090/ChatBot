{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    // point imports to src/
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },
  // ensure VSCode and TS know about your source files
  "include": ["src"]
}
